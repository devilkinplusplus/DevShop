@model IEnumerable<IdentityRole>
@{
    int count = 1;
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger">
</div>
<table class="table table-hover">
    <thead class="table-dark">
        <th>#</th>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </thead>
    <tbody class="table-light">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/admin/role/edit/@item.Id" class="badge bg-warning">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="/admin/role/delete/@item.Id"
                            onclick="return confirm('Are you sure?')"
                            class="badge bg-danger">
                            Delete
                        </a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr >
                <td>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container">
    <a class="btn btn-success btn-large" href="/admin/role/create">Create New</a>
</div>
