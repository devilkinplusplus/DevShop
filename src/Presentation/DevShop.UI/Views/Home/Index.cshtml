<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Categories</span>
    </h2>
    <div class="row px-xl-5 pb-3">
        @if (Model.SubCatagories != null)
        {
            @foreach (var subcatagory in Model.SubCatagories)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <a class="text-decoration-none" href="">
                        <div class="cat-item d-flex align-items-center mb-4">
                            <div class="overflow-hidden" style="width: 100px; height: 100px;">
                                <img class="img-fluid" src="img/cat-1.jpg" alt="">
                            </div>
                            <div class="flex-fill pl-3">
                                <h6>@subcatagory.Name</h6>
                                <small class="text-body">100 Products</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12 col-md-8 col-sm-6">
                <div class="alert alert-info text-center fw-bold">
                    No catagories found !
                </div>
            </div>
        }

    </div>
</div>
<!-- Categories End -->
<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">New Products</span>
    </h2>
    <div class="row px-xl-5">
        @if (Model.NewProducts != null)
        {

            @foreach (var item in Model.NewProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@item.ProductPictures.First().Picture.ImageUrl" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" onclick="AddToCard('@item.Id')">
                                    <i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" onclick="AddToFavourits('@item.Id')">
                                    <i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href="/home/details/@item.Id">
                                    <i class="fa fa-search"></i>
                                </a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="/home/details/@item.Id">@item.Title</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>$@(item.Price - (item.Price * item.Discount / 100))</h5><h6 class="text-muted ml-2">
                                    @if (item.Discount != 0)
                                    {
                                        <del>
                                            $@item.Price
                                        </del>
                                    }
                                </h6>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                @if (item.Rating != 0)
                                {
                                    @for (int i = 0; i < (int)item.Rating; i++)
                                    {
                                        <small class="fa fa-star text-primary mr-1"></small>
                                    }
                                }
                                else
                                {
                                    <i class="far fa-star text-primary"></i>
                                    <i class="far fa-star text-primary"></i>
                                    <i class="far fa-star text-primary"></i>
                                    <i class="far fa-star text-primary"></i>
                                    <i class="far fa-star text-primary"></i>
                                }
                                <small>(@item.View)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12 col-md-8 col-sm-6">
                <div class="alert alert-info text-center fw-bold">
                    No products found !
                </div>
            </div>
        }
    </div>
</div>
<!-- Products End -->
